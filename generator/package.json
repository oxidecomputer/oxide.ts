{
  "name": "oxide-ts-generator",
  "version": "1.0.0",
  "description": "Minimal TS OpenAPI client generator",
  "scripts": {
    "gen": "npm run gen:gen && npm run gen:transform && npm run gen:fmt",
    "gen:gen": "swagger-typescript-api -p ../spec.json -o .. --union-enums --extract-request-params",
    "gen:transform": "sed -i '' 's/organizationName/orgName/g' ../Api.ts",
    "gen:fmt": "prettier -w ../Api.ts",
    "postinstall": "patch-package"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "patch-package": "^6.4.7",
    "prettier": "2.5.1",
    "swagger-typescript-api": "9.3.1"
  }
}
