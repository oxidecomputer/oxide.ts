{
  "name": "oxide-ts-generator",
  "version": "1.0.0",
  "description": "Minimal TS OpenAPI client generator",
  "main": "index.ts",
  "scripts": {
    "gen": "./update-spec.sh $(cat ../OMICRON_VERSION) && ./gen.sh ../spec.json > ../Api.ts && npm run gen:fmt",
    "gen-from": "./gen.sh",
    "gen:fmt": "prettier -w ../Api.ts",
    "tsc": "tsc"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^17.0.10",
    "prettier": "2.5.1",
    "swagger-parser": "^10.0.3",
    "typescript": "^4.5.4"
  }
}
